<div id="main-wrapper">
	<div id="map-ui">
		
		<div class="dropdown">
			<button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
				Teams
			</button>

			<ul class="dropdown-menu bg-black text-white">
				<li class="dropdown-item bg-black text-white" onclick="set_team('black')"> 
					<input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault0">
						None
				</li>

				<% for(color of team_colors){ %>
					<li class="dropdown-item bg-black text-white" onclick="set_team('<%= color %>')">
						<input style="background-color: <%= color %>;" class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault<%= color %>">
							Team <%= color %>
					</li>
				<% }%>
			</ul>
		</div>

		<div class="dropdown">
			<button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
				Paths
			</button>

			<ul class="dropdown-menu bg-black text-white" id="path-dropdown">
				<!-- filled dynamically -->
			</ul>
		</div>
		
	</div>

	
	<div id="map"></div>

	<!-- <div id="chart-wrapper" style="width: 100%;"> -->
		<!-- By default the elevations are hidden (nothing selected) -->
		<canvas id="elevations" style="display: none; width: 100%;"> </canvas>
	<!-- </div> -->
</div>